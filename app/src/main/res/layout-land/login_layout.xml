<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="600dp"
    android:background="#000000">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLACK HAT CHAT"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/tv_sub_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="LOG IN"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textStyle="italic"
        android:fontFamily="cursive"
        android:layout_below="@id/tv_header" />

    <EditText
        android:id="@+id/et_enter_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#696969"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:text="Enter Email"
        android:textAlignment="center"
        android:onClick="false"
        android:layout_below="@id/tv_sub_header"/>

    <EditText
        android:id="@+id/et_create_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#696969"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_sub_header"
        android:layout_marginLeft="30dp"
        android:text="Enter Password"
        android:textAlignment="center"
        android:onClick="false"
        android:layout_toRightOf="@id/et_enter_email"/>

    <Button
        android:id="@+id/btn_enter"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#500000"
        android:textColor="#FFFFFF"
        android:text="Enter"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:onClick="true"
        android:layout_above="@id/btn_return" />

    <Button
        android:id="@+id/btn_return"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Go Back"
        android:textSize="14dp"
        android:textAlignment="center"
        android:onClick="true"
        android:layout_below="@id/et_confirm_password" />

</RelativeLayout>